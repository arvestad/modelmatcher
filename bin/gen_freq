#! /usr/bin/env python3
import argparse
import sys
sys.path.insert(0, '../src/')

from modelmatcher.models import RateMatrix

def main():
    ap = argparse.ArgumentParser(description='Get the implied AA frequences for a stored matrix suitable for seq-gen input')
    ap.add_argument('base_matrix', choices=list(map(lambda m: m.get_name(), RateMatrix.get_all_models())),
                    help='Specifify which standard sequence model should be used.')

    args = ap.parse_args()

    model = args.base_matrix

    m = RateMatrix.instantiate(args.base_matrix)
    f = m.get_freq()
    print(' '.join(map(str, f)))


if __name__ == '__main__':
    main()
